<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLoginMain"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="55dp"
        android:backgroundTint="@color/yellow"
        android:onClick="login"
        android:text="Log In"
        android:textColor="@color/darkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsernameMain"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/yellow"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/etPasswordMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPasswordMain"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginBottom="73dp"
        android:backgroundTint="@color/yellow"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsernameMain" />

    <Button
        android:id="@+id/btnAllWorkoutMain"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="@color/yellow"
        android:onClick="gotoAllWorkout"
        android:text="All Workouts"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddWorkout"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddWorkout"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="@color/yellow"
        android:onClick="gotoAddNewWorkout"
        android:text="Add Workout"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAllWorkoutMain" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="@color/yellow"
        android:onClick="gotoSignup"
        android:text="Sign Up"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toTopOf="@+id/btnAllWorkoutMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginMain" />

</androidx.constraintlayout.widget.ConstraintLayout>