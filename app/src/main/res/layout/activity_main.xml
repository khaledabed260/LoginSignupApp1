<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etUsernameMain"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/yellow"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/etPasswordMain"
        app:layout_constraintStart_toStartOf="@+id/etPasswordMain" />

    <EditText
        android:id="@+id/etPasswordMain"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/yellow"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLoginMain"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="303dp"
        android:backgroundTint="@color/yellow"
        android:onClick="login"
        android:text="Log In"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="51dp"
        android:backgroundTint="@color/yellow"
        android:onClick="gotoAddNewWorkout"
        android:text="Add Workout"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAllWorkoutMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="51dp"
        android:backgroundTint="@color/yellow"
        android:onClick="gotoAllWorkout"
        android:text="All Workouts"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/yellow"
        android:onClick="gotoSignup"
        android:text="Sign Up"
        android:textColor="@color/darkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginMain" />

</androidx.constraintlayout.widget.ConstraintLayout>